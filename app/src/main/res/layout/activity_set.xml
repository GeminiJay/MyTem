<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/setlinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/settoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:contentInsetEndWithActions="0dp"
        app:contentInsetLeft="0dp"
        app:popupTheme="@android:color/holo_red_light"
        app:title="设置"
        app:titleMargin="20dp" />




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="选择要预先设置的部位："
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/jianpartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/jianbu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="肩部"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/jianbu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/jianbu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/jianbu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/jianbuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yaopartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/yaobu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="腰部"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/yaobu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/yaobu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/yaobu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/yaobuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fupartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fubu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="腹部"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/fubu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/fubu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/fubu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/fubuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="22.5"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tuipartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tuibu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="腿部"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/tuibu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/tuibu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/tuibu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/tuibuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/beipartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/beibu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="背部"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/beibu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/beibu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/beibu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/beibuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/xiazhipartsetlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/xiazhibu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="下肢"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/xiazhibu45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="45℃" />

                <Button
                    android:id="@+id/xiazhibu50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="50℃" />

                <Button
                    android:id="@+id/xiazhibu55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:text="55℃" />

                <ToggleButton
                    android:id="@+id/xiazhibuswitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="21"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:text="ToggleButton" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>



    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义温度："
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <LinearLayout
        android:id="@+id/custommizelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawingCacheQuality="high"
        android:fadingEdge="vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mintem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="37℃"
            android:textColor="@android:color/holo_blue_bright" />

        <SeekBar
            android:id="@+id/TemseekBar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="80"
            android:drawingCacheQuality="high"
            android:max="65"
            android:progressDrawable="@drawable/layer_list_seekbar"
            android:thumb="@drawable/tumb" />

        <TextView
            android:id="@+id/maxtem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="center"
            android:text="65℃"
            android:textColor="@android:color/holo_orange_dark" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attention：选中部位后，拖动滑块可自定义调节温度大小！"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textStyle="italic" />

</LinearLayout>